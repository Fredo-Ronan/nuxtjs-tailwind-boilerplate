generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // change this to another if using other than SQLite
  url      = env("DATABASE_URL")
}

model Account {
  id Int @id @default(autoincrement())
  username String
  password String
  email String
  active Int // act as boolean 1 = active, 0 = inactive

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
